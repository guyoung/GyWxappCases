.container {
  width: 100%;
  height: 100%;
}

.page {
  min-height: 100%;
  flex: 1;
  background-color: #FBF9FE;
  font-size: 16px; 
  overflow: hidden;
}

.page__hd {
  padding: 40px;
}

.page__title {
  display: block;
  font-size: 20px;
}

.page__desc {
  margin-top: 5px;
  font-size: 14px;
  color: #888888;
}

.btn-area {
  padding: 0 15px;
}

.btn-area button {
  margin-top: 10px;
  margin-bottom: 10px;
}

.navigator-hover button {
  background-color: blue;
}

.other-navigator-hover button {
  background-color: red;
}