@import './iconfont.wxss';

.container {
    width: 100%;
    height: 100%;
  }

  .weui-grids{
    
     width: 100%;
     height: 100%;
     overflow:hidden;
 
   }
   .weui-grid{
     position:relative;
     float:left;
     padding:10px;
     width:33.33333333%;
     box-sizing:border-box;
 
   }
   
   .weui-grid_active{
     background-color:#ececec
   }
   .weui-grid__icon{
     display:block;
     width:48px;
     height:48px;
     margin:0 auto
   }
   .weui-grid__label{
     margin-top:5px;
     display:block;
     text-align:center;
     color:#000;
     font-size:14px;
     white-space:nowrap;
     text-overflow:ellipsis;
     overflow:hidden
   }
  
  
 .icon {
   font-size: 40px;
   color: #1AAD19
 }
