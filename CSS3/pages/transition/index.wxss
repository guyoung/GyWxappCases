.container {
    width: 100%;
    height: 100%;
}

.page {
    min-height: 100%;
    flex: 1;
    background-color: #FBF9FE;
    font-size: 16px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
    overflow: hidden;
}

.page__hd {
    padding: 40px;
}

.page__title {
    display: block;
    font-size: 20px;
}

.page__desc {
    display: block;
    margin-top: 5px;
    font-size: 14px;
    color: #888888;
}

.page__output {
    display: block;
    margin-top: 20px;
    font-size: 9px;
    color: #000000;
}

.page__bd {
    width: 100%;
}

.view1 {
    width: 120px;
    height: 30px;
    margin: 20px;
    background-color: green;
    transition: width 2s;
}

.view1:hover {
    width: 240px;
}

.view2 {
    width: 100px;
    height: 100px;
    margin: 20px;
    background: yellow;
    transition: width 2s, height 2s, transform 2s;
}

.view2:hover {
    width: 200px;
    height: 200px;
    transform: rotate(180deg);
}

.view3 {
    width: 120px;
    height: 30px;
    margin: 20px;
    background-color: salmon;
    transition-property: width;
    transition-duration: 2s;
}

.view3:hover {
    width: 240px;
}

.view4 {
    width: 120px;
    height: 120px;
    margin: 20px;
    background-color: cornflowerblue;
    transition:width 2s;
    transition-timing-function:ease-in;
}

.view4:hover {
    width: 240px;
}

.view5 {
    width: 120px;
    height: 120px;
    margin: 20px;
    background-color: fuchsia;
    transition-property:width;
    transition-duration:5s;
    transition-delay:2s;
}

.view5:hover {
    width: 240px;
}